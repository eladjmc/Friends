@model IEnumerable<Friends.Models.Friend>

@{
    ViewData["Title"] = "רשימת חברים";
}

<h1>רשימת חברים</h1>

<p>
    <a asp-controller="Friends" asp-action="Create">יצירת חבר חדש</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                תמונה
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @if (item.Images.FirstOrDefault() != null)
                    {

                        <img src="data:image;base64,@Convert.ToBase64String(item.Images.FirstOrDefault().myImage)" width="60" height="60" alt="image" />
                    }
                    else
                    {

                        <p>No Image</p>
                    }
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @Html.ActionLink("עדכון", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-success" }) 
                    @Html.ActionLink("פרטים", "Details", new { id=item.Id }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("מחיקה", "Delete", new { id = item.Id}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
